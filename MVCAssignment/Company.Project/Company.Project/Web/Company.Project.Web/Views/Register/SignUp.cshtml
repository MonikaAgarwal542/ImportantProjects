@model Company.Project.Web.Models.RegisterUserModel;

@{
    ViewData["Title"] = "SignUp page";
}




<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col col-xl-8">
                <div class="card" style="border-radius: 1rem">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/images/book3.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; width: 412px; height: 640px; aspect-ratio: auto 412 / 618;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div style="color:red; font-size:20px">@ViewBag.Message</div>

                                    <h4 class=" mb-3 pb-1" style="letter-spacing: 1px;font-weight:bolder">Welcome To Book Club!!</h4>
                                    <div class="mb-2">
                                        <label asp-for="UserName" class="form-label"></label>
                                        <input asp-for="UserName" class="form-control form-control-lg" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="mb-2">
                                        <label asp-for="EmailId" class="form-label"></label>
                                        <input asp-for="EmailId" class="form-control form-control-lg" />
                                        <span asp-validation-for="EmailId" class="text-danger"></span>
                                    </div>

                                    <div class="mb-2">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="mb-2">
                                        <label asp-for="ConfirmPassword"></label>
                                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>



                                    <div class="pt-1 mb-3">
                                        <button class="btn btn-dark btn-lg btn-block" style="background-color:lightseagreen" type="submit">Register</button>
                                    </div>
                                    <div><a asp-action="Login" asp-controller="Login" style="color:darkblue"> Already have an account? LogIn here</a></div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
