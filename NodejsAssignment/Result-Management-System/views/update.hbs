<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <style>
      a { color: #0366d6; } .btn-primary { color: #fff; background-color:
      #1b6ec2; border-color: #1861ac; } .nav-pills .nav-link.active, .nav-pills
      .show > .nav-link { color: #fff; background-color: #1b6ec2; border-color:
      #1861ac; } html { font-size: 14px; } @media (min-width: 768px) { html {
      font-size: 16px; } } .border-top { border-top: 1px solid #e5e5e5; }
      .border-bottom { border-bottom: 1px solid #e5e5e5; } .box-shadow {
      box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.05); } .head { color: black;
      } button.accept-policy { font-size: 1rem; line-height: inherit; } /*
      Sticky footer styles -------------------------------------------------- */
      html { position: relative; min-height: 100%; } body { /* Margin bottom by
      footer height */ margin-bottom: 60px; } img { max-width: 10%;
      border-radius: 20%; } .bgcolor { background-color: rosybrown; }
      .nav-link:hover { font-weight: bolder; border-bottom: 3px solid white; }
      span.icon { font-family: "Glyphicons Halflings"; } .nav-item { float:
      right; }

    </style>
  </head>
  <body>

    <nav
      class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bgcolor"
    >
      <div class="container">
        <a class="navbar-brand head"><img
            src="https://static.thenounproject.com/png/25759-200.png"
          /><b>Result Management System</b></a>

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="navbar-collapse"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse"
        >
          <ul class="navbar-nav ml-auto">

            <li class="nav-item">
              <a class="nav-link text-white" href="/">LOGOUT</a>
            </li>

          </ul>
        </div>
      </div>
    </nav>

    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-10">
        <div class="col col-xl-8 bdr">
          <div class="card" style="border-radius: 1rem bdr">
            <div class="row g-0">

              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-2 p-lg-5 text-black">

                  <form action="/updatedetails">

                    <h4
                      class="mb-3 pb-1"
                      style="letter-spacing: 1px;font-weight:bolder;text-align: center;"
                    >UPDATE RESULT!!</h4><br />
                    {{#data}}
                      <div class="mb-2">

                        <label class="form-label">Roll No</label>
                        <input
                          type="number"
                          name="rollno"
                          value="{{rollno}}"
                          class="form-control form-control-lg"
                          required
                          readonly
                          min="1"
                        />

                      </div><br />
                      <div class="mb-2">

                        <label class="form-label">Student Name</label>
                        <input
                          type="text"
                          value="{{name}}"
                          name="name"
                          class="form-control form-control-lg"
                          required
                          pattern="^[a-zA-Z\s]{2,}"
                        />

                      </div><br />
                      <div class="mb-2">

                        <label class="form-label">Date Of Birth</label>
                        <input
                          type="date"
                          value="{{dob}}"
                          name="dob"
                          class="form-control form-control-lg"
                          max="2022-12-31"
                          required
                        />

                      </div>
                      <br />
                      <div class="mb-2">

                        <label class="form-label">Score</label>
                        <input
                          type="number"
                          value="{{score}}"
                          name="score"
                          class="form-control form-control-lg"
                          min="0"
                          max="100"
                          required
                        />
                        <input
                          name="id"
                          ,
                          type="number"
                          ,
                          value="{{id}}"
                          hidden
                        /><br />

                      </div><br />

                      <div class="pt-1 mb-2">
                        <button
                          class="btn btn-dark btn-lg btn-block"
                          style="background-color:rosybrown"
                          type="submit"
                        >UPDATE RESULT</button>
                      </div>

                    {{/data}}

                  </form>

                </div>
              </div>
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img
                  src="https://sinhro.rs/wp-content/uploads/2014/01/Knjige-u-biblioteci-600x394.jpg"
                  alt="login form"
                  class="img-fluid"
                  style="border-radius: 1rem 0 0 1rem; width: 412px; height: 640px; aspect-ratio: auto 412 / 618;"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </body>

</html>